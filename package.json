{
  "name": "gvoice",
  "productName": "GVoice",
  "version": "1.0.7",
  "type": "module",
  "main": "lib/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx tsc && electron-forge start",
    "build": "npm run build:css && npx tsc && electron-builder",
    "build:mac": "npm run build:css && npx tsc && electron-builder --mac",
    "build:win": "npm run build:css && npx tsc && electron-builder --win",
    "build:css": "tailwindcss -i ./src/styles.css -o ./src/styles-output.css",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./src/styles-output.css --watch",
    "build:ts": "npx tsc",
    "package": "npm run build:css && npx tsc && electron-forge package",
    "make": "npm run build:css && npx tsc && electron-forge make",
    "publish": "npm run build:css && npx tsc && electron-forge publish"
  },
  "keywords": [],
  "author": "Charles Liu",
  "license": "Apache License 2.0",
  "description": "GVoice: a google tts app",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron-forge/publisher-github": "^7.8.3",
    "@electron/fuses": "^1.0.0",
    "@tailwindcss/cli": "^4.0.12",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.3.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/genai": "^0.3.0",
    "js-yaml": "^4.1.0",
    "undici": "^7.4.0",
    "wav": "^1.0.2"
  },
  "build": {
    "asar": true,
    "appId": "com.activebook.gvoice",
    "asarUnpack": [],
    "files": [
      "lib/**/*",
      "src/**/*",
      "assets/**/*",
      "config.yaml",
      "node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*/.bin",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/@huggingface/**/.cache/**",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!.git",
      "!**/.DS_Store",
      "!.gitattributes",
      "!.gitignore",
      "!screenshots/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "target": "dir",
      "icon": "assets/logo.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/logo.ico"
    }
  }
}
